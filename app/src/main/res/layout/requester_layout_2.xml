<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/requester"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleView"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/amiko"
            android:paddingLeft="8dp"
            android:text="@string/requester_title"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="normal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="25dp" />

        <TextView
            android:id="@+id/requesteractivityTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/amiko"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="13sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/titleView"
            app:layout_constraintStart_toEndOf="@+id/titleView" />

        <ImageView
            android:id="@+id/userMenuButton"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onClick"
            app:srcCompat="@drawable/settings" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/requester"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/addTaskRequesterButton"
            android:layout_width="0dp"
            android:layout_height="40"
            android:layout_weight="1"
            android:background="@color/requester"
            android:clickable="true"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/requestedTasksRequesterButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/add_task_icon" />

        <ImageView
            android:id="@+id/requestedTasksRequesterButton"
            android:layout_width="0dp"
            android:layout_height="40"
            android:layout_weight="1"
            android:background="@color/requester"
            android:clickable="true"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/biddedTasksRequesterButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/addTaskRequesterButton"
            app:srcCompat="@drawable/requested_icon" />

        <ImageView
            android:id="@+id/biddedTasksRequesterButton"
            android:layout_width="0dp"
            android:layout_height="40"
            android:layout_weight="1"
            android:background="@color/requester"
            android:clickable="true"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/acceptedTasksRequesterButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/requestedTasksRequesterButton"
            app:srcCompat="@drawable/bidded_icon" />

        <ImageView
            android:id="@+id/acceptedTasksRequesterButton"
            android:layout_width="0dp"
            android:layout_height="40"
            android:layout_weight="1"
            android:background="@color/requester"
            android:clickable="true"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/doneTasksRequesterButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/biddedTasksRequesterButton"
            app:srcCompat="@drawable/assigned_icon" />

        <ImageView
            android:id="@+id/doneTasksRequesterButton"
            android:layout_width="0dp"
            android:layout_height="40"
            android:layout_weight="1"
            android:background="@color/requester"
            android:clickable="true"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/switchViewRequesterButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/acceptedTasksRequesterButton"
            app:srcCompat="@drawable/done_icon" />

        <ImageView
            android:id="@+id/switchViewRequesterButton"
            android:layout_width="0dp"
            android:layout_height="40"
            android:layout_weight="1"
            android:background="@color/requester"
            android:clickable="true"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/doneTasksRequesterButton"
            app:srcCompat="@drawable/switch_icon" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>