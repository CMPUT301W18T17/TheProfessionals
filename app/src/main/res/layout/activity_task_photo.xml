<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding= "10dp"
    android:layout_height="match_parent"
    tools:context="professional.team17.com.professional.TaskPhotoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />
        <Button
            android:id="@+id/bTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dddddd"
            android:fontFamily="@font/amiko"
            android:text="TakePhoto" />
        <Button
            android:id="@+id/bConfirm"
            android:text = "Confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bImageUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#dddddd"
            android:fontFamily="@font/amiko"
            android:text="Upload" />
        <Button
            android:id="@+id/bImageBack"
            android:text = "back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bImageNext"
            android:text = "Next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/errorText"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"/>

    </LinearLayout>

</ScrollView>
