<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/biddedTasksProviderButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/acceptedTasksProviderButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bidded_tasks_provider" />

    <ImageView
        android:id="@+id/acceptedTasksProviderButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/searchTasksButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/biddedTasksProviderButton"
        app:srcCompat="@drawable/accepted_tasks_provider" />

    <ImageView
        android:id="@+id/searchTasksButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/taskMapButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/acceptedTasksProviderButton"
        app:srcCompat="@drawable/search_provider" />

    <ImageView
        android:id="@+id/taskMapButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/switchViewProviderButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/searchTasksButton"
        app:srcCompat="@drawable/task_map_provider" />

    <ImageView
        android:id="@+id/switchViewProviderButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/taskMapButton"
        app:srcCompat="@drawable/switch_view_provider" />

    <ImageView
        android:id="@+id/titleBarBGProvider"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/userMenuButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title_bg_provider" />

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="@string/provider_title"
        android:textSize="18sp"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userMenuButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/titleBarBGProvider"
        app:srcCompat="@drawable/user_icon_provider"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="398dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/biddedTasksProviderButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBarBGProvider"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/provider_view_task_userName"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="username"
            app:layout_constraintBaseline_toBaselineOf="@+id/provider_view_task_Requester"
            app:layout_constraintStart_toEndOf="@+id/provider_view_task_Requester" />

        <TextView
            android:id="@+id/provider_view_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/provider_view_task_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapView" />

        <TextView
            android:id="@+id/provider_view_task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Description"
            app:layout_constraintEnd_toStartOf="@+id/provider_view_task_Date"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provider_view_task_title" />

        <TextView
            android:id="@+id/provider_view_task_statusType"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:text="StatusType"
            app:layout_constraintBaseline_toBaselineOf="@+id/provider_view_task_status"
            app:layout_constraintStart_toEndOf="@+id/provider_view_task_status" />

        <Button
            android:id="@+id/provider_view_task_bidButton"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:text="Place Bid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/provider_view_task_deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            android:layout_marginStart="8dp"
            android:text="Cancel Bid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provider_view_task_description" />

        <TextView
            android:id="@+id/provider_view_task_Date"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Task Date:"
            app:layout_constraintBaseline_toBaselineOf="@+id/provider_view_task_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/provider_view_task_description" />

        <TextView
            android:id="@+id/provider_view_task_date_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Date"
            app:layout_constraintBaseline_toBaselineOf="@+id/provider_view_task_Date"
            app:layout_constraintStart_toEndOf="@+id/provider_view_task_Date" />

        <TextView
            android:id="@+id/provider_view_task_lowBid"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Lowest Bid: $"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provider_view_task_Requester" />

        <TextView
            android:id="@+id/provider_view_task_myBid"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:text="My Bid: $"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provider_view_task_lowBid" />

        <TextView
            android:id="@+id/provider_view_task_lowBidInput"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginStart="2dp"
            android:text="LowBidAmount"
            app:layout_constraintBaseline_toBaselineOf="@+id/provider_view_task_lowBid"
            app:layout_constraintStart_toEndOf="@+id/provider_view_task_lowBid" />

        <TextView
            android:id="@+id/provider_view_task_myBidInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="MyBidAmount"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@+id/provider_view_task_myBid"
            app:layout_constraintStart_toEndOf="@+id/provider_view_task_myBid" />

        <TextView
            android:id="@+id/provider_view_task_Requester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Task Requester:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provider_view_task_status" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/activityTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/titleView"
        app:layout_constraintStart_toEndOf="@+id/titleView" />

</android.support.constraint.ConstraintLayout>